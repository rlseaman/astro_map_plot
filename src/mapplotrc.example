# mapplot configuration file
# Place this file at ~/.mapplotrc (or specify with --config)
#
# Command-line arguments always override config file settings
# This allows you to set your preferred defaults

# Display settings
display:
  projection: plate-carree    # Default map projection
  figsize: [12, 8]            # Figure size in inches [width, height]
  dpi: 100                    # Resolution
  bgcolor: white              # Background color
  facecolor: null             # Axes face color (null = transparent)

# Grid settings
grid:
  spacing: [30, 30]           # Default grid spacing [longitude, latitude] in degrees
  color: gray                 # Grid line color
  alpha: 0.5                  # Grid line transparency (0=invisible, 1=opaque)
  style: '--'                 # Grid line style (-- = dashed, - = solid, : = dotted)

# Color scheme
colors:
  # Color palette for data series (multiple input files)
  # Options: tableau10, set2, vibrant, muted, default
  data_palette: tableau10
  
  # Reference line colors (fixed)
  ecliptic: red               # Ecliptic plane and poles
  equator: green              # Celestial equator and poles
  galactic: blue              # Galactic plane and poles

# Celestial options
celestial:
  max_mag: 6.0                # Maximum magnitude for BSC5 star catalog

# File paths
paths:
  config: ~/.mapplotrc                                    # This config file
  bsc5_data: ~/.local/share/mapplot/bsc5_data.txt        # Star catalog
  mpc_observatories: ~/.local/share/mapplot/mpc_observatories.txt  # Observatories

# Tips:
# - All settings are optional - only include what you want to change
# - Colors can be: names (red, blue), hex (#FF0000), or RGB tuples
# - Paths can use ~ for home directory
# - Command-line args always take precedence over this file
